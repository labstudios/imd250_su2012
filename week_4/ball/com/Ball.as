package com{	import flash.display.Sprite;	public class Ball extends Sprite	{		public static const TOP_WALL:Number = 0;		public static const BOTTOM_WALL:Number = 400;		public static const LEFT_WALL:Number = 0;		public static const RIGHT_WALL:Number = 550;				private var vx:Number = 6;		private var vy:Number = 6;				public function Ball():void		{					}				public function moveBall():void		{			this.x += this.vx;			this.y += this.vy;						/*if(this.left < LEFT_WALL || this.right > RIGHT_WALL)			{				this.vx *= -1;			}			if(this.top < TOP_WALL || this.bottom > BOTTOM_WALL)			{				this.vy *= -1;			}*/						if(this.left < LEFT_WALL)			{				this.vx *= -1; //change the direction				this.left = LEFT_WALL; //touch the wall			}			if(this.right > RIGHT_WALL)			{				this.vx *= -1;				this.right = RIGHT_WALL;			}			if(this.top < TOP_WALL)			{				this.vy *= -1;				this.top = TOP_WALL;			}			if(this.bottom > BOTTOM_WALL)			{				this.vy *= -1;				this.bottom = BOTTOM_WALL;			}		}				public function set speed(spd:Number):void		{			this.vx = this.vx < 0 ? -spd:spd;			this.vy = this.vy < 0 ? -spd:spd;		}				public function get speed():Number		{			return Math.abs(this.vx);		}				public function get top():Number		{			return this.y - (this.height/2);		}				public function set top(t:Number):void		{			this.y = t + (this.height/2);		}				public function get bottom():Number		{			return this.y + (this.height/2);		}				public function set bottom(b:Number):void		{			this.y = b - (this.height/2);		}				public function get left():Number		{			return this.x - (this.width/2);		}				public function set left(l:Number):void		{			this.x = l + (this.width/2);		}				public function get right():Number		{			return this.x + (this.width/2);		}				public function set right(r:Number):void		{			this.x = r - (this.width/2);		}	}}