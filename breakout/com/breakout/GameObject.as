package com.breakout{	import flash.display.Sprite;	import flash.events.Event;	public class GameObject extends Sprite	{		public function GameObject():void		{			this.addEventListener(Event.ADDED_TO_STAGE, this.init);		}				public function init(e:* = null):void		{					}				public function run():void		{					}				public function get top():Number		{			return this.y - (this.height/2);		}				public function set top(t:Number):void		{			this.y = t + (this.height/2);		}				public function get bottom():Number		{			return this.y + (this.height/2);		}				public function set bottom(b:Number):void		{			this.y = b - (this.height/2);		}				public function get left():Number		{			return this.x - (this.width/2);		}				public function set left(l:Number):void		{			this.x = l + (this.width/2);		}				public function get right():Number		{			return this.x + (this.width/2);		}				public function set right(r:Number):void		{			this.x = r - (this.width/2);		}	}}