package com.breakout{	public class Brick extends GameObject	{		public static const X_PADDING:Number = 42;		public static const Y_PADDING:Number = 24;		public static const LEFT_START:Number = 24;		public static const TOP_START:Number = 70;		public static const PER_ROW:int = 9;		public static const POINT_VALUE:int = 5;		public function Brick()		{			// constructor code		}				public function hit():void		{			Game.instance.score += POINT_VALUE;			for(var i:int = 0; i < Game.instance.bricks.length;++i)			{				if(Game.instance.bricks[i] == this)				{					Game.instance.bricks.splice(i, 1);					break;				}			}			this.parent.removeChild(this);		}	}}