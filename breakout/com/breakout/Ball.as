package com.breakout{	import com.breakout.GameObject;		public class Ball extends GameObject	{		private var vx:Number = 6;		private var vy:Number = 6;				public function Ball():void		{					}				override public function run():void		{			this.x += this.vx;			this.y += this.vy;						if(this.left < Game.LEFT_WALL)			{				this.vx *= -1; //change the direction				this.left = Game.LEFT_WALL; //touch the wall			}			if(this.right > Game.RIGHT_WALL)			{				this.vx *= -1;				this.right = Game.RIGHT_WALL;			}			if(this.top < Game.TOP_WALL)			{				this.vy *= -1;				this.top = Game.TOP_WALL;			}			if(this.bottom > Game.BOTTOM_WALL)			{				this.vy *= -1;				this.bottom = Game.BOTTOM_WALL;			}		}				public function set speed(spd:Number):void		{			this.vx = this.vx < 0 ? -spd:spd;			this.vy = this.vy < 0 ? -spd:spd;		}				public function get speed():Number		{			return Math.abs(this.vx);		}					}}