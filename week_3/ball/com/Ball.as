package com{	import flash.display.Sprite;	public class Ball extends Sprite	{		public static const TOP_WALL:Number = 0;		public static const BOTTOM_WALL:Number = 400;		public static const LEFT_WALL:Number = 0;		public static const RIGHT_WALL:Number = 550;				private var speed:Number = 6;		private var vx:Number = 0;		private var vy:Number = 0;				public function Ball():void		{			this.vx = this.speed;			this.vy = this.speed;		}				public function moveBall():void		{			this.x += this.vx;			this.y += this.vy;						if(this.x < LEFT_WALL || this.x > RIGHT_WALL)			{				this.vx *= -1;			}			if(this.y < TOP_WALL || this.y > BOTTOM_WALL)			{				this.vy *= -1;			}		}				public function setSpeed(spd:Number):void		{			this.speed = spd;			this.vx = this.vx < 0 ? -spd:spd;			this.vy = this.vy < 0 ? -spd:spd;					}	}}