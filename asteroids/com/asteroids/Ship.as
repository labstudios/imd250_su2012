package com.asteroids{	import flash.display.Sprite;	import flash.events.Event;	public class Ship extends GameObject	{		private static const ROTATE_SPEED:Number = 12;		private var acceleration:Number = 0.5;		private var topSpeed:Number = 8;				public function Ship():void		{			this.addEventListener(Event.ADDED_TO_STAGE, this.init);		}				public function init(e:* = null):void		{			(this.parent as Game).ship = this;		}				public function rotateLeft():void		{			this.rotation -= ROTATE_SPEED;		}				public function rotateRight():void		{			this.rotation += ROTATE_SPEED;		}				public function thrust():void		{			if(this.speed > this.topSpeed)			{				this.vx -= Math.cos(this.direction) * this.acceleration;				this.vy -= Math.sin(this.direction) * this.acceleration;			}			this.vx += Math.cos(this.rotation * Math.PI/180) * this.acceleration;			this.vy += Math.sin(this.rotation * Math.PI/180) * this.acceleration;		}				public function fire():Bullet		{			return new Bullet(this.x, this.y, this.rotation);		}	}}