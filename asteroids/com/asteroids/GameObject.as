package com.asteroids{	import flash.display.Sprite;	public class GameObject extends Sprite	{		protected var vx:Number = 0;		protected var vy:Number = 0;		public function GameObject()		{			// constructor code		}				public function run():void		{			this.x += this.vx;			this.y += this.vy;			if(this.x < Game.LEFT)			{				this.x = Game.RIGHT;			}			if(this.x > Game.RIGHT)			{				this.x = Game.LEFT;			}			if(this.y < Game.TOP)			{				this.y = Game.BOTTOM;			}			if(this.y > Game.BOTTOM)			{				this.y = Game.TOP;			}		}				public function get speed():Number		{			var asq:Number = this.vx * this.vx;			var bsq:Number = this.vy * this.vy;			var csq:Number = asq + bsq;			return Math.sqrt(csq);		}				public function set speed(n:Number):void		{			this.vx = Math.cos(this.rotation * Math.PI/180) * n;			this.vy = Math.sin(this.rotation * Math.PI/180) * n;		}				public function get direction():Number // in radians		{			return Math.atan2(this.vy, this.vx);		}	}}